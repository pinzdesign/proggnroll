---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Psytrance and progressive trance record label" />
		<meta name="keywords" content="psytrance,psyprog,psychedelic,progressive,Ascent,Mina,Geomagnetic,records,label">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script src="https://kit.fontawesome.com/ed11d827ab.js" crossorigin="anonymous"></script>
		<title>{title}</title>
		<meta name="robots" content="nofollow">
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
  	@import url('https://fonts.googleapis.com/css2?family=Monomaniac+One&family=Montserrat+Alternates&display=swap');
	* {
		padding: 0;
		margin: 0;
	}
	html {
		background-color: black;
		font-family: 'Montserrat Alternates', sans-serif;
		font-size: 18px;
		color: white;
	}
	p {
		margin-bottom: 30px;
		font-size: 14px;
	}
</style>
